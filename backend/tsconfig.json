{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "#mod/*": ["./src/modules/*"],
      "#lib/*": ["./src/lib/*"]
    },
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"]
}
